<Window x:Class="DEMKA1231231321.Windows.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DEMKA1231231321.Windows"
        mc:Ignorable="d"
        Title="Окно авторизации" Height="450" Width="800" MinHeight="400" MinWidth="600" Loaded="Window_Loaded">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Style="{StaticResource tbGeneral}">Логин</TextBlock>
            <TextBox x:Name="TextBoxLogin"/>
            <TextBlock Style="{StaticResource tbGeneral}">Пароль</TextBlock>
            <PasswordBox x:Name="PassBoxPassword"/>
            <Button x:Name="ButtonLogIn" Content="Войти" Click="BtnLogIn_Click"/>
            <Button x:Name="ButtonGuest" Content="Гость" Click="BtnGuest_Click"/>
        </StackPanel>
    </Grid>
</Window>
